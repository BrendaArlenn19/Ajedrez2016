/* Cron칩metro que contabiliza el tiempo total de la partida.*/

#include<stdio.h>
#include<stdlib.h>
#include<unistd.h>

int Tiempo_de_Partida(int argc, char *argv[])
{
/* Inicializaci칩n de las variables, contar치 con minutos, segundos y horas. */
int hrs=0;
int min=0; 
int seg=0;

/* Contabiliza desde el momento en que se da inicio a la partida.*/
while(!0){

        if(seg>=60){
            seg=0;
            min=min+1;
            
        if(min>=60){
            min=0;
            hrs=hrs+1;
       
       }
       
       }
/* Limpia la pantalla de la consola para que se muestre la siguiente. */
system("/usr/bin/clear");
/* Imprime el tiempo en la pantalla durante la partida. */
printf("%d:%d:%d" , hrs , min, seg);
/* Se coloca la detenci칩n para aumentar la exactitud. */
usleep(1000);
seg=seg+1;
}
getch();
return 0;
}
