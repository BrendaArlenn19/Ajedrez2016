#include <stdio.h>
#include <string.h>


main()
{
    char Joaquin[6]="Alexa";    //Nombre del usuario// 
    char Nombre[6];             
    char Contrasena[10]="QAH20";
    char Password[10];
    int cont=0;



    printf("Escriba su nombre usurario :\t");
    scanf("%s",Nombre);

    if(strcmp(Joaquin,Nombre)== 0)
        {
          printf("Bienvenido\n");
        }

        else  if(strcmp(Joaquin,Nombre)>0 ||(Joaquin,Nombre)<0)

                while(cont<3)
                    {

                        printf("Escriba su nombre usurario :\t");
                        scanf("%s",Nombre);
                        if(strcmp(Joaquin,Nombre)>0 ||(Joaquin,Nombre)<0)
                        {
                            cont=cont+1;
                            printf("%d",cont);
                        }

                        else  if(strcmp(Joaquin,Nombre)== 0)
                        {
                            break;
                        }

                    }


    printf("Escriba su Password (menor a diez caracteres):\t");
    scanf("%s",Password);
        if(strcmp(Contrasena,Password)== 0)
        {
           printf("Bienvenido");
        }

        else if(strcmp(Contrasena,Password)>0 || strcmp(Contrasena,Password)<0)
            while(cont<2)
                {
                    printf("Escriba su Password:\t");
                    scanf("%s",Nombre);
                    if(strcmp(Contrasena,Password)>0 || strcmp(Contrasena,Password)<0)
                        {
                            cont=cont+1;
                        }

                        else  if(strcmp(Contrasena,Password)== 0)
                            {
                                printf("Bienvenido");
                            }

                            }

}
